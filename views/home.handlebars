<div id="wrapper">
  <h1>All the strangness thats fit to Scrape</h1>
  <h2><i>Here are the articles:</i></h2>
  <div id="articles">
    {{#if article}}
      {{#each article}}
      <div class="card mb-3" style="">
        <div class="row no-gutters">
          <div class="col-md-4">
            <img src={{this.img}} class="card-img" alt="articledb_img">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">{{this.title}}</h5>
              <p class="card-text">{{this.summary}}</p>
              <br>
              <span>
              <a href={{this.link}} class="btn btn-primary" target="_blank">View Article</a>
              <button type="button" class="btn btn-primary" id="saveArticle" data-id="{{this._id}}">Save Article</button>
              </span>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    {{/if}}
      {{!-- {{else}}
